{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": ["error", "always"],
        "no-duplicate-imports": ["error"],
        "array-bracket-spacing": ["error", "always"],
        "arrow-spacing": ["error"],
        "block-spacing": ["error", "always"],
        "comma-spacing": ["error"],
        "max-len": ["error", { "code": 80, "tabWidth": 4 }],
        "indent": ["error", 4]
    }
}
